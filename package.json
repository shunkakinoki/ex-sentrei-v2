{
  "name": "@sentrei/sentrei",
  "version": "1.49.0",
  "homepage": "https://github.com/sentrei/sentrei",
  "repository": {
    "type": "git",
    "url": "https://github.com/sentrei/sentrei.git"
  },
  "license": "AGPL-3.0-or-later",
  "author": "Shun Kakinoki",
  "scripts": {
    "alpha": "yarn run local:alpha && yarn run deploy",
    "beta": "yarn run local:beta && yarn run deploy",
    "build": "next build",
    "check": "yarn run depcheck && yarn run lint && yarn run release:check",
    "clean": "yarn run clean:dist && yarn run clean:tsbuildinfo",
    "clean:dist": "rimraf dist",
    "clean:tsbuildinfo": "rimraf tsconfig*tsbuildinfo",
    "config": "yarn run env:get:local && firebase functions:shell",
    "coverage:rules": "curl http://localhost:8080/emulator/v1/projects/sentrei:ruleCoverage.html > coverage/ruleCoverage.html",
    "depcheck": "depcheck .",
    "deploy": "yarn run deploy:rules",
    "deploy:functions": "firebase deploy -f --only functions",
    "deploy:functions:manual": "firebase deploy --only functions",
    "deploy:rules": "yarn run deploy:rules:database && yarn run deploy:rules:firestore && yarn run deploy:rules:storage",
    "deploy:rules:database": "firebase deploy -f --only database",
    "deploy:rules:database:manual": "firebase deploy --only database",
    "deploy:rules:firestore": "firebase deploy -f --only firestore",
    "deploy:rules:firestore:manual": "firebase deploy --only firestore",
    "deploy:rules:storage": "firebase deploy -f --only storage",
    "deploy:rules:storage:manual": "firebase deploy --only storage",
    "dev": "next dev",
    "env:get": "firebase functions:config:get > .runtimeconfig.json",
    "env:pull": "vercel env pull .env.local",
    "env:set": "test -f env.json && firebase functions:config:unset env && firebase functions:config:set env=\"$(cat env.json)\"",
    "env:set:all": "yarn run env:set:alpha && yarn run env:set:beta && yarn run env:set:main",
    "env:set:alpha": "yarn run alpha:local && yarn run swap:alpha:env && yarn run env:set",
    "env:set:beta": "yarn run beta:local && yarn run swap:beta:env && yarn run env:set",
    "env:set:main": "yarn run main:local && yarn run swap:main:env && yarn run env:set",
    "eslint:check": "eslint . -c .eslintrc.json --ext .ts,.tsx --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint",
    "eslint:fix": "eslint --fix . -c .eslintrc.json --ext .ts,.tsx --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint",
    "firebase:alpha": "yarn run alpha:local && yarn run env:get && yarn run start:firebase",
    "firebase:beta": "yarn run beta:local && yarn run env:get && yarn run start:firebase",
    "firebase:main": "yarn run main:local && yarn run env:get && yarn run start:firebase",
    "fix": "yarn run jsonsort:fix && yarn run sort-package-json:fix && yarn run eslint:fix && yarn run prettier:fix",
    "indexes:get": "firebase firestore:indexes > firestore/firestore.indexes.json",
    "jsonsort:check": "jsonsort .devcontainer .vscode locales -a -c",
    "jsonsort:fix": "jsonsort .devcontainer .vscode locales -a",
    "lint": "yarn run jsonsort:check && yarn run sort-package-json:check && yarn run eslint:check && yarn run prettier:check",
    "local:alpha": "yarn run swap:alpha && firebase use alpha",
    "local:beta": "yarn run swap:beta && firebase use beta",
    "local:main": "yarn run swap:main && firebase use main",
    "log": "firebase functions:log",
    "main": "yarn run local:main && yarn run deploy",
    "ncu:check": "ncu -p yarn",
    "ncu:upgrade": "ncu -u -p yarn",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "release": "semantic-release",
    "release:check": "semantic-release -d",
    "sentry:release": "sentry-cli releases new -p sentrei ${SENTRY_RELEASE} && sentry-cli releases set-commits --auto ${SENTRY_RELEASE} && sentry-cli releases finalize ${SENTRY_RELEASE} && sentry-cli releases deploys ${SENTRY_RELEASE} new -e ${SENTRY_ENVIRONMENT}",
    "setup": "firebase setup:emulators:firestore",
    "sort-package-json:check": "sort-package-json 'package.json' --check",
    "sort-package-json:fix": "sort-package-json 'package.json'",
    "start": "next start",
    "start:firebase": "firebase emulators:start --import ./data --only firestore,functions,pubsub --inspect-functions",
    "swap:alpha": "cp alpha.firebase.json firebase.json",
    "swap:alpha:env": "cp alpha.env.json env.json",
    "swap:beta": "cp beta.firebase.json firebase.json",
    "swap:beta:env": "cp beta.env.json env.json",
    "swap:main": "cp main.firebase.json firebase.json",
    "swap:main:env": "cp main.env.json env.json",
    "test:firebase": "firebase emulators:exec --only firestore 'jest --collect-coverage --silent && yarn run coverage:rules'",
    "test:watch:firebase": "firebase emulators:exec --only firestore 'jest --collect-coverage --watch && yarn run coverage:rules'",
    "tsc": "tsc --p tsconfig.json",
    "typescript": "yarn run clean && yarn run tsc",
    "watch": "yarn run tsc -w --preserveWatchOutput"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git-cz --hook || true"
    }
  },
  "dependencies": {
    "@headlessui/react": "^0.2.0",
    "@next/eslint-plugin-next": "^9.5.6-canary.17",
    "@papercups-io/chat-widget": "^1.1.1",
    "@toast-ui/editor": "^2.5.0",
    "@toast-ui/react-editor": "^2.5.0",
    "@types/faker": "^5.1.3",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.53",
    "@types/react-syntax-highlighter": "^13.5.0",
    "autoprefixer": "^10.0.1",
    "clsx": "^1.1.1",
    "codemirror": "^5.58.2",
    "faker": "^5.1.0",
    "firebase": "^8.0.0",
    "firebase-admin": "^9.3.0",
    "firebase-functions": "^3.11.0",
    "firebase-functions-test": "^0.2.3",
    "firebase-tools": "^8.14.0",
    "mitt": "^2.1.0",
    "next": "^9.5.6-canary.17",
    "next-seo": "^4.14.0",
    "nprogress": "^0.2.0",
    "postcss-import": "^13.0.0",
    "react": "^0.0.0-experimental-4ead6b530",
    "react-dom": "^0.0.0-experimental-4ead6b530",
    "react-markdown": "^5.0.2",
    "react-syntax-highlighter": "^15.2.1",
    "recoil": "^0.0.13",
    "remark-gfm": "^1.0.0",
    "sharp": "^0.26.2",
    "swr": "^0.3.6",
    "tailwindcss": "^2.0.0-alpha.2",
    "tailwindcss-truncate-multiline": "^1.0.3",
    "typed.js": "^2.0.11"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@sentry/cli": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "commitizen": "^4.2.2",
    "depcheck": "^1.2.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "git-cz": "^4.7.1",
    "husky": "^4.3.0",
    "json-sort-cli": "^1.16.4",
    "npm-check-updates": "^9.2.3",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.2.1",
    "sort-package-json": "^1.46.1",
    "typescript": "^4.0.5",
    "vercel": "^20.1.2"
  },
  "engines": {
    "npm": "please_use_yarn_instead"
  }
}
